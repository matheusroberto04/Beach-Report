</div>

<style>
    .perfil-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
        font-family: Arial, sans-serif;
    }

    .perfil-container h2 {
        color: #4A90E2;
    }

    .post {
        background-color: #E6F1FB;
        border-radius: 10px;
        padding: 20px;
        width: 300px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .post-header p {
        font-size: 12px;
        color: #9B9B9B;
    }

    .post-body p {
        font-size: 14px;
        color: #333;
        margin: 10px 0;
    }

    .post-body img {
        width: 100%;
        border-radius: 10px;
    }

    .post-footer {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

    .like-button, .dislike-button {
        border: none;
        background: none;
        font-size: 16px;
        cursor: pointer;
    }

    .like-button {
        color: #4CAF50;
    }

    .dislike-button {
        color: #F44336;
    }

    .report-button {
        margin-top: 20px;
    }

        .report-button a {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: #4A90E2;
            text-decoration: none;
            border-radius: 5px;
        }

            .report-button a:hover {
                background-color: #357ABD;
            }
</style>
